@model JewelryAuctionData.Models.Customer

@{
    ViewBag.Title = "Customer Details";
}
<h2>Customers Details</h2>

<dl class="row">
    <dt class="col-sm-2">Customer ID</dt>
    <dd class="col-sm-10">@Model.CustomerId</dd>

    <dt class="col-sm-2">Customer Name</dt>
    <dd class="col-sm-10">@Model.CustomerName</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Dob</dt>
    <dd class="col-sm-10">@Model.DoB</dd>

    <dt class="col-sm-2">Ocupation </dt>
    <dd class="col-sm-10">@Model.Ocupation</dd>

    <dt class="col-sm-2"> Nationality </dt>
    <dd class="col-sm-10">@Model.Nationality</dd>

    <dt class="col-sm-2">Password</dt>
    <dd class="col-sm-10">@Model.Password</dd>

    
    
</dl>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>